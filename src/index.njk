---
layout: base.njk
title: Home
---

{% if collections.posts.length > 0 %}
  {% set currentYear = null %}
  {% for post in collections.posts %}
    {% set postYear = post.data.date | year %}
    {% if postYear != currentYear %}
      {% if currentYear != null %}</ul>{% endif %}
      {% set currentYear = postYear %}
      <h2 class="year-heading">{{ postYear }}</h2>
      <ul class="post-list">
    {% endif %}
    <li class="post-item">
      <span class="post-date">{{ post.data.date | readableDate }}</span>
      <h3 class="post-title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h3>
    </li>
  {% endfor %}
  </ul>
{% else %}
  <p>No posts yet.</p>
{% endif %}
