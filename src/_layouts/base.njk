  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title and title != "Home" %}{{ title }} - {% endif %}Brett Kinny</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="alternate" type="application/rss+xml" title="Brett Kinny Weblog" href="/feed.xml">
